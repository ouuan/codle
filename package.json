    "@vueuse/core": "^8.3.1",
    "codemirror": "^5.65.3",
    "codemirror-editor-vue3": "^2.0.6",
    "dompurify": "^2.3.6",
    "highlight.js": "^11.5.1",
    "naive-ui": "^2.28.2",
